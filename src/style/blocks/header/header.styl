.header
  height 44px
  position fixed
  top 0
  left 0
  width 100%
  @media (min-width: $tablet)
    height 90px
  &__wrapper
    display flex
    align-items center
    height 100%
    padding 0 10px
    position relative
    @media (min-width: $tablet)
      padding 0
  .ocean-logo
    display none
    @media (min-width: $tablet)
      position absolute
      top 50%
      left 40px
      background url('../i/ocean_logo.png') 50% no-repeat
      background-size contain
      height 30px
      margin -15px 0 0
      width 140px
    ._after-intro &
      @media (min-width: $tablet)
        display block
  .anos-logo
    background url('../i/anos_logo.png') 50% no-repeat
    background-size contain
    height 14px
    width 106px
    @media (min-width: $tablet)
      margin 0 auto
    ._after-intro &
      @media (max-width: $tablet - 1)
        display none  
  &__burger
    cursor pointer
    height 44px
    margin 0
    position absolute
    top 50%
    right 0
    margin -22px 0 0
    width 44px
    @media (min-width: $tablet)
      right 28px
    span
    &::before
    &::after
      position: absolute;
      left: 50%;
      background: #fff
      display: block;
      height: 2px;
      margin-left: -10px;
      width: 20px
    span
      top: 21px
    &::before
    &::after 
      content: '';
      transform-origin: 50%;
      transition: top .2s ease .1s,bottom .2s ease .1s
    &::before
      top: 14px
    &::after
      bottom: 14px

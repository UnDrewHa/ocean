.burger-menu
  position fixed
  top -70px
  left 0
  right 0
  bottom 0
  padding 0 0 70px
  pointer-events none
  transform translateY(70px)
  z-index 2000
  &__overlay
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    height 100%
    width 100%
    background #000
    opacity 0
    transition opacity .25s ease
    z-index 1
  &__container
    position absolute
    right 0
    bottom 0
    top: 0
    background #121212
    height 100%
    overflow hidden 
    max-width 300px
    padding 88px 0 0
    transition transform .25s ease
    transform translate3d(100%, 0, 0) 
    width 80%
    z-index 2
       
  &__close
    position absolute
    top: 22px
    right: 28px
    cursor pointer
    display block
    height 44px
    width 44px
    z-index 3
    &::before
    &::after
      position: absolute;
      left: 50%;
      background: #fff
      content: '';
      transform-origin: 50%;
      display: block;
      height: 2px;
      margin-left: -10px;
      width: 20px
    &::before
      top: 21px
      transform: rotate(45deg);
    &::after
      bottom: 21px
      transform: rotate(-45deg);
    &:hover
      svg
        fill #fff
  &__list
    position absolute
    top 88px
    left 0
    bottom 0
    right 0
    background #121212
    height: 100%
    overflow-y: auto
    overflow-x: hidden
    -webkit-overflow-scrolling: touch
    margin 0
    padding 0
    z-index 2
    &::after
      content ''
      display block
      height 150px
  &__item
    border-bottom 1px solid rgba(255,255,255,.05)
    height 50px
    font 14px/49px $gothic
    list-style-type none
    letter-spacing .05em
    margin 0
    padding 0
    text-transform uppercase
    &:first-of-type
      border-top 1px solid rgba(255,255,255,.05)
    @media (min-width: $tablet)
      height 70px
      line-height 69px
    a
      color #fff
      display block
      height 100%
      padding 0 30px
      transition color .2s ease
      &:hover
        color #3b78bf
        
.burger-menu-opened
  .burger-menu
    pointer-events auto
    .burger-menu__overlay
      opacity .8
      transition opacity .4s ease
    .burger-menu__container
      transform: none
      transition transform .4s ease 
.wysiwyg
  color #929292
  font 12px/20px $gothic
  letter-spacing .05em
  margin 0 auto
  max-width 840px
  padding 35px 0 45px
  > :first-child
    margin 0
  h2
    color #fff
    font 13px/24px $korataki
    margin 35px 0 0
    padding 0 0 20px
    position relative
    text-transform uppercase  
    &::after
      position absolute
      left 0
      bottom 0
      background #3b78bf
      content ''
      height 3px
      width 50px
  h3
    color #3b78bf
    margin 25px 0 0
  b
    color #fff
  b.em
    color #3b78bf
  hr
    background #1e1e1e
    border 0
    display block
    height 1px
    margin 35px 0
    outline none
  p
    margin 25px 0 0  
  ul, ol
    border-top 1px solid #1e1e1e
    border-bottom 1px solid #1e1e1e
    margin 35px 0 0
    padding 25px 0
  ol
    li
      list-style-position: outside;
      margin: 0 0 0 18px;
      padding: 0 0 0 2px;
  ol.white
    border 0
    padding 0
    > li
      color #fff
      margin-bottom 20px
      &:last-child
        margin-bottom 0
    ul
      padding: 10px 0;
      margin: 0 0 0 -20px;
      border: 0;
  ul  
    li
      color #929292
      list-style-type none
      list-style-position inside
      margin 0
      padding 0 0 0 20px
      position relative
      &::before
        position absolute
        top 7px
        left 2px
        background #3b78bf
        border-radius 50%
        content ''
        display block
        height 5px
        width 5px